{{!
    @template local_ce/instance_list
}}
<div class="container-fluid">
    <div class="row">
        <div class="col d-flex w-100">
            <h2>{{#str}} admin_set_instances, local_ce, {{setname}} {{/str}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col d-flex w-100 justify-content-between">
            <h3>{{#str}} admin_listinstances, local_ce {{/str}}</h3>
            <h2>
                <a href="{{listsetsurl}}">{{#str}} admin_listsets, local_ce {{/str}}</a>
            </h2>
        </div>
    </div>
</div>
<ul class="list-group">
    {{#instances}}
        <li class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{customname}}</h5>
                {{#ce}}<code>{{name}}</code>{{/ce}}
            </div>
            <div class="d-flex w-100 justify-content-between">
                <code class="mb-1">{{config}}</code>
                <p>
                    <a href="{{editurl}}" title="{{#str}} edit {{/str}}">
                        {{#pix}} t/edit, core, {{#str}} edit {{/str}}{{/pix}}
                    </a>
                    <a href="{{deleteurl}}" title="{{#str}} delete {{/str}}">
                        {{#pix}} t/delete, core, {{#str}} delete {{/str}}{{/pix}}
                    </a>
                </p>
            </div>
        </li>
    {{/instances}}
    <a href="{{newurl}}" class="list-group-item list-group-item-action">+</a>
</ul>

{{!
    @template local_ce/ce_list
}}
<h3>{{#str}} admin_listces, local_ce {{/str}}</h3>
<ul class="list-group">
    {{#ces}}
        <li class="list-group-item list-group-item-action">
            <div style="max-width: 5rem">
                {{#iconurl}}
                    <div style="width: 126px; height: 126px;">
                        <img src="{{iconurl}}" alt="{{name}}">
                    </div>
                {{/iconurl}}
                {{^iconurl}}
                    <div class="local-ce-icon-ce local-ce-icon-ce-{{defaulticon}}"></div>
                {{/iconurl}}
            </div>
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{name}}</h5>
                <code>{{cename}}</code>
            </div>
            <div class="d-flex w-100 justify-content-between">
                <p class="mb-1">{{description}}</p>
                <p>
                    <a href="{{editurl}}" title="{{#str}} edit {{/str}}">
                        {{#pix}} t/edit, core, {{#str}} edit {{/str}}{{/pix}}
                    </a>
                    <a href="{{deleteurl}}" title="{{#str}} delete {{/str}}">
                        {{#pix}}t/delete, core, {{#str}} delete {{/str}}{{/pix}}
                    </a>
                </p>

            </div>
            <small>{{version}}</small>
        </li>
    {{/ces}}
    <a href="{{newurl}}" class="list-group-item list-group-item-action">+</a>
</ul>
